{{#if this.note}}
<h5>Previous comments:</h5>
{{#each this.note}}
<form class="comment-wrapper">
  <div class="form-group">
    <input readonly value="{{this.title}}" type="text" class="form-control" data-noteId={{this._id}} placeholder="{{this.title}}""
      data-noteId={{this._id}}>
    </input>
  </div>
  <div class="form-group">
    <textarea readOnly class="form-control" rows=2 data-noteId={{this._id}} placeholder={{this.comment}}
      data-noteId={{this._id}}>{{this.comment}}
    </textarea>
  </div>
  <div class="btn btn-info btn-sm unlock-note" data-noteId={{this._id}}>
    <i class="fas fa-unlock"></i> Unlock to update</div>
  <div class="btn btn-info btn-sm save-old-note" style="display:none" data-noteId={{this._id}}>
    <i class="fas fa-unlock"></i> Save update</div>
  <div class="btn btn-danger btn-sm delete-note" data-noteId={{this._id}}>
    <i class="fas fa-trash-alt"></i> Delete</div>

</form>
{{/each}}
{{/if}}